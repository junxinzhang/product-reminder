# 服务器配置
NODE_ENV=production
PORT=3000

# JWT密钥（生产环境请修改）
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# 数据库配置
DATABASE_PATH=/app/data/database.sqlite

# 企业微信配置（可选，也可以在Web界面配置）
WECHAT_CORP_ID=
WECHAT_AGENT_ID=
WECHAT_SECRET=
WECHAT_WEBHOOK_URL=

# 时区设置
TZ=Asia/Shanghai

# 日志级别
LOG_LEVEL=info

# 文件上传限制（MB）
MAX_FILE_SIZE=10

# 会话超时时间（小时）
SESSION_TIMEOUT=24

# 数据库备份配置
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION=7d

# 邮件通知配置（可选功能）
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# Redis配置（可选）
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# 监控配置
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false